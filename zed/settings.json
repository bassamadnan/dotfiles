// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "relative_line_numbers": true,
    "languages": {
      "Python": {
        "formatter": {
          "external": {
            "command": "black",
            "arguments": ["-"]
          }
        },
        "format_on_save": "on"
      }
    },
    "git": {
      "inline_blame": {
        "enabled": false
      }
    },
    "features": {
      "inline_completion_provider": "none"
    },
    "vim_mode": false,
    "ui_font_size": 18,
    "buffer_font_size": 16,
    "theme": {
      "mode": "system",
      "light": "One Light",
      "dark": "VSCode Dark Modern"
    },
    "experimental.theme_overrides": {
      "background.appearance": "blurred",
      "background": "#4c4642C7",
      "editor.background": "#000000C7",
      "editor.gutter.background": "#000000C7",
      "tab_bar.background": "#000000C7",
      "terminal.background": "#000000C7",
      "toolbar.background": "#000000C7",
      "tab.active_background": "#282828C7",
      "tab.inactive_background": "#000000B0",
      "status_bar.background": "#000000C7",
      "title_bar.background": "#000000C7",
      "panel.background": "#000000C7",
      "border.variant": "#000000B0",
      "scrollbar.track.border": "#000000B0",
      "editor.active_line.background": "#000000B0"
    }
  }
  